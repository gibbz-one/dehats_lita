<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml">

	<mx:Script>
		<![CDATA[
			
			[Bindable]
			public var selectedDate:Date;						
			
		]]>
	</mx:Script>

	<mx:DateField x="0" y="1" id="df" selectedDate="{selectedDate}"
		change=" selectedDate = df.selectedDate"/>
	<mx:NumericStepper x="82" y="1" minimum="0" maximum="23" width="40" value="{ selectedDate.hours}" id="hoursNs"
		enabled="{ selectedDate!=null}"
		change=" selectedDate.hours= hoursNs.value"/>
	<mx:Label x="122" y="3" text="h"/>
	<mx:NumericStepper x="134" y="1" maximum="59" width="40" value="{ selectedDate.minutes}" id="minsNs"
		enabled="{ selectedDate!=null}"
		change=" selectedDate.minutes = minsNs.value"/>
	<mx:Label x="173" y="3" text="mn"/>
	<mx:NumericStepper x="192" y="1" maximum="59" width="40" value="{ selectedDate.seconds}" id="secsNs"
		enabled="{ selectedDate!=null}"
		change=" selectedDate.seconds = secsNs.value"/>
	<mx:Label x="232" y="3" text="s" width="13"/>
	
	
	
</mx:Canvas>
